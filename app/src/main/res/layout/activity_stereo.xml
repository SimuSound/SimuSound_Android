<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/left_img_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:text="Choose Left Image" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/right_img_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:text="Choose Right Image" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/stereo_match_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:text="Compute Stereo Map" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/company_logo"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/exassist_companylogo" />

            <ImageView
                android:id="@+id/right_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/company_logo"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/exassist_companylogo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_img_undistorted"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/company_logo"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/exassist_companylogo" />

            <ImageView
                android:id="@+id/right_img_undistorted"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/company_logo"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/exassist_companylogo" />
        </LinearLayout>

        <ImageView
            android:id="@+id/stereo_match_filtered"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="false"
            android:contentDescription="@string/company_logo"
            android:visibility="visible"
            app:srcCompat="@drawable/exassist_companylogo" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>